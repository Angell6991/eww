;;-------------------def_var---------------------;;
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

(defwindow widget_hours
    :monitor 0
    :stacking "bg"
    :geometry 
    (geometry
        :x "2%"
        :y "30px"
        :width "10%"
        :height "10px"
        :anchor "top right"
    )
    (box
        :orientation "v"
        :halign "center"
        :space-evenly "false"
        :spacing "20"
        (data-day)
        (clock-data)
    )
)


