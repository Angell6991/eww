;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

(defwindow bar-window 
    :monitor 0 
    :class "bar-window"
    :stacking "overlay" ;; "fg"
    :focusable "exclusive"
    :geometry
    (geometry 
        :x "2%" 
        :y "30px" 
        :width "5%" 
        :height "30px"
        :anchor "center"
    )
    (box
        :orientation "v" 
        :spacing "20"
        :space-evenly "false"  ;;espacio estre widget valor buleano: true ó false
        (power-menu)
        (button-cancel)
    )
)


